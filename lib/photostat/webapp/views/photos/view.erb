<script type="text/javascript" language="javascript">
$(function () {
    $(document).bind('keydown', 'left', function (e) {
	e.preventDefault();
	window.location = "/<%= @photo[:id] %>/prev/";
	return false;
    });
    $(document).bind('keydown', 'right', function (e) {
	e.preventDefault();
	window.location = "/<%= @photo[:id] %>/next/";
	return false;
    });
    $(document).bind('keydown', 'esc', function (e) {
	e.preventDefault();
	window.location = "/";
	return false;
    });
});
</script>
<img src="/photos/<%= @photo[:local_path] %>" id="photo-view" alt="<%= @photo[:created_at] %>" title="<%= @photo[:created_at] %>" />